{  
    "setup": {
        "seed": 42,
        "device": "cuda:0",
        "dtype": "torch.float32",
        "trainer_name": "sequential",
        "train": true,
        "test" : false,
        "ckpt": false,
        "use_variance_test": false
    },

    "graph": {
        "periodic": false,
        "sample_factor": 0.5,
        "overlap_factor_p2r": 1,
        "overlap_factor_r2p": 1,
        "regional_level": 1,
        "add_dummy_node": false,
        "with_additional_info": true,
        "regional_points": [64, 64]
    },

    "model": {
        "name": "lano",
        "drop_edge": 0.0,
        "use_conditional_norm": false,
        "variable_mesh": false,
        "args":{
            "patch_size": 2,
            "gno": {
                "gno_coord_dim": 2,
                "projection_channels": 256,
                "in_gno_channel_mlp_hidden_layers": [64, 64, 64],
                "out_gno_channel_mlp_hidden_layers": [64, 64],
                "lifting_channels": 256,
                "gno_radius": 0.033
            },
            "transformer": {
                "hidden_size": 256,
                "use_attn_norm": true,
                "use_ffn_norm": true,
                "norm_eps": 1e-6,
                "num_layers": 3,
                "attn_config": {
                    "hidden_size": 256,
                    "num_heads": 8,
                    "num_kv_heads": 8,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4
                },
                "ffn_config": {
                    "hidden_size": 256,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4      
                }
            }
        }
    },

    "dataset": {
        "name": "wave_c_sines",
        "metaname": "rigno-unstructured/wave_c_sines",
        "base_path": "/cluster/work/math/camlab-data/rigno-unstructured/",
        "train_size": 1024,
        "val_size": 128,
        "test_size": 256,
        "max_time_diff": 14,
        "batch_size": 64,
        "num_workers": 4,
        "shuffle": true,
        "latent_queries": [64, 64],
        "metric": "final_step",
        "predict_mode": "autoregressive"
    },

    "optimizer": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "epoch": 1000,
            "batch_size": 32,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "step",
            "scheduler_step_size": 100,
            "scheduler_gamma": 0.8,
            "scheduler_T_max": 100,
            "scheduler_eta_min": 1e-4
        }
    },

    "path": {
        "ckpt_path":".ckpt/lano/wave_c_sines.pt",
        "loss_path":".loss/lano/wave_c_sines.png",
        "result_path":".results/lano/wave_c_sines.png",
        "database_path":".database/lano/wave_c_sines.csv"
    }
}   
                
            
