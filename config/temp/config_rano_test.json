{  
    "setup": {
        "seed": 42,
        "device": "cuda:1",
        "dtype": "torch.float32",
        "trainer_name": "seq",
        "train": true,
        "test" : false,
        "ckpt": false,
        "use_variance_test": false
    },

    "model": {
        "name": "rano",
        "args": {
            "sample_factor": 0.5,
            "overlap_factor_p2r": 1,
            "overlap_factor_r2p": 1,
            "regional_level": 3
        },
        "model_args":{
            "node_latent_size": 64,
            "edge_latent_size": 64,
            "num_message_passing_steps": 16
        }
    },

    "dataset": {
        "name": "heat_l_sines",
        "metaname": "rigno-unstructured/heat_l_sines",
        "base_path": "../graph_pde_solver/dataset",
        "train_size": 1024,
        "val_size": 128,
        "test_size": 256,
        "max_time_diff": 14,
        "batch_size": 128,
        "num_workers": 4,
        "shuffle": true,
        "latent_queries": [64, 64],
        "metric": "all_step",
        "predict_mode": "autoregressive"
    },

    "optimizer": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "epoch": 500,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "step",
            "scheduler_step_size": 100,
            "scheduler_gamma": 0.8,
            "scheduler_T_max": 100,
            "scheduler_eta_min": 1e-4
        }
    },

    "path": {
        "ckpt_path":".ckpt/rigno/heat_l_sines.pt",
        "loss_path":".loss/rigno/heat_l_sines.png",
        "result_path":".results/rigno/heat_l_sines.png",
        "database_path":".database/rigno/heat_l_sines.csv"
    }

    
}


